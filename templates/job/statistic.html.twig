{% extends 'base.html.twig' %}

{% block title %}Hello CollectLinkedinController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
{% endblock %}

{% block body %}

    <div class="fixed-top js-alert-top"></div>

    <h1>job statistic({{ jobs.getTotalItemCount }})</h1>
    <!-- searching -->

    <div class="container border">
        <div class="row text-center font-weight-bolder">
            <div class="col-sm-4 border">
                date
            </div>
            <div class="col border">
                tryingCount
            </div>
        </div>
        {% for job in jobs %}
        <div class="row text-center  align-middle mt-1 bg-light js-tr-top">
            <div class="col-sm-4 border">
                {{ job.dateVal }}
            </div>
            <div class="col border">
                {{ job.cnt }}
            </div>

        </div>
        {% endfor %}
    </div>
    <div class="row mt-3">
        <div class="mx-auto ">
            {{ knp_pagination_render(jobs) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/job.js') }}?temp=3"></script>
{% endblock %}